{
  "name": "todo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "tw": "npx @tailwindcss/cli@next -i ./assets/style.css -o ./assets/output.css --minify --watch",
    "migrate": "npx prisma migrate dev --skip-generate"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.0-alpha.16",
    "prettier": "^3.3.2",
    "prettier-plugin-go-template": "^0.0.15",
    "prettier-plugin-organize-attributes": "^1.0.0",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "prisma": "^5.15.0",
    "tailwindcss": "^4.0.0-alpha.16"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-go-template",
      "prettier-plugin-organize-attributes",
      "prettier-plugin-tailwindcss"
    ],
    "attributeGroups": [
      "^(onclick|onsubmit)$",
      "^(name)$",
      "^(id)$",
      "^hx-",
      "^href$",
      "^class$",
      "$DEFAULT",
      "^aria-"
    ],
    "overrides": [
      {
        "files": [
          "*.html"
        ],
        "options": {
          "parser": "go-template"
        }
      }
    ],
    "printWidth": 1000
  }
}
