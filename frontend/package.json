{
  "name": "todo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "tw": "npx tailwindcss -i ./assets/style.css -o ./assets/output.css --minify --watch",
    "migrate": "npx prisma migrate dev --skip-generate"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.0-alpha.15",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-attributes": "^1.0.0",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "prisma": "^5.14.0",
    "tailwindcss": "^4.0.0-alpha.15"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-organize-attributes",
      "prettier-plugin-tailwindcss"
    ],
    "attributeGroups": [
      "^(onclick|onsubmit)$",
      "^(name)$",
      "^(id)$",
      "^hx-",
      "^class$",
      "$DEFAULT",
      "^aria-"
    ],
    "printWidth": 1000
  }
}
